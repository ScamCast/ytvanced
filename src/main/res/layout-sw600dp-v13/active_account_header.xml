            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="24sp" android:ellipsize="end" android:id="@+id/email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="24dp" app:robotoFont="0"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeButton android:textSize="24sp" android:textColor="?attr/ytCallToAction" android:ellipsize="end" android:id="@+id/manage_account" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:singleLine="true" android:paddingStart="24dp" app:robotoFont="0"/>
        </LinearLayout>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceCaptionInverse" android:textColor="?attr/ytTextPrimary" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/status_text" android:background="?attr/ytGeneralBackgroundC" android:layout_width="match_parent" android:layout_height="36dp" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/account_name_container" android:textAllCaps="true" android:textAlignment="viewStart" android:paddingStart="24dp" android:paddingEnd="24dp" app:robotoFont="6"/>
