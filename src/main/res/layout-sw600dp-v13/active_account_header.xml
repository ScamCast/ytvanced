    <RelativeLayout android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_column="0" android:layout_row="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/account_name_container" android:paddingBottom="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toStartOf="@+id/header_fab_position_placeholder" android:layout_alignParentStart="true">
