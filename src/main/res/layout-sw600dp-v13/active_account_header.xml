<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/signed_in_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="180dp" android:layout_column="1" android:rowCount="3">
