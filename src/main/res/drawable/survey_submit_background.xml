<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:constantSize="true">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/submit_pressed_background"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/submit_background"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/submit_background"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>
