<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#33ffffff"/>
            <size android:height="@dimen/countdown_inner_size" android:width="@dimen/countdown_inner_size"/>
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270" android:toDegrees="270" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="ring" android:useLevel="true" android:innerRadius="@dimen/countdown_radius" android:thickness="3sp">
                <solid android:color="#ccffffff"/>
            </shape>
        </rotate>
    </item>
</layer-list>
