<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape android:gravity="left" android:shape="rectangle">
            <corners android:radius="0dp"/>
            <solid android:color="#6c6c6d"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <corners android:radius="0dp"/>
                <solid android:color="#b30100"/>
            </shape>
        </clip>
    </item>
</layer-list>
