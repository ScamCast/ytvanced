<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/audio_swap_track" android:layout_width="match_parent" android:layout_height="80dp">
    <RelativeLayout android:id="@+id/audio_swap_track_preview" android:background="@color/audio_swap_track_bar_background" android:layout_width="80dp" android:layout_height="80dp">
        <ImageView android:layout_gravity="center" android:id="@+id/audio_swap_track_play_button" android:background="@drawable/audio_swap_play_button" android:layout_width="36dp" android:layout_height="36dp" android:layout_centerInParent="true" android:contentDescription="@string/upload_edit_audio_swap_play_button_description"/>
    </RelativeLayout>
    <LinearLayout android:id="@+id/audio_swap_track_track_info" android:background="@color/audio_swap_track_bar_background" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1" android:layout_alignLeft="@+id/audio_swap_track_preview" android:layout_alignStart="@+id/audio_swap_track_preview">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="bottom|left|center_vertical|center_horizontal|center" android:id="@+id/audio_swap_track_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp" android:text="Title" android:singleLine="true" android:layout_weight="1" app:robotoFont="6"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="15sp" android:textColor="#9affffff" android:ellipsize="end" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/audio_swap_track_artist" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp" android:text="Artist" android:singleLine="true" android:layout_weight="1" android:layout_below="@+id/audio_swap_track_title" app:robotoFont="1"/>
        </LinearLayout>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="@android:color/white" android:gravity="center_vertical" android:id="@+id/audio_swap_track_duration" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="0:00" app:robotoFont="6"/>
    </LinearLayout>
    <RelativeLayout android:background="@android:color/black" android:layout_width="1dp" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/audio_swap_track_add_button" android:background="@color/audio_swap_track_bar_background" android:layout_width="80dp" android:layout_height="80dp" android:contentDescription="@string/upload_edit_audio_swap_select_button_description">
        <ImageView android:layout_gravity="center" android:background="@drawable/audio_swap_add_button" android:layout_width="36dp" android:layout_height="36dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
