<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/background" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/background_tint" android:background="@color/endscreen_hovercard_outside_color" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:layout_gravity="center" android:id="@+id/hovercard_layout" android:background="?attr/ytBrandBackgroundSolid" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="top" android:orientation="horizontal" android:id="@+id/hovercard_info_view" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/endscreen_hovercard_button_bar_height" style="?android:attr/borderlessButtonStyle">
            <FrameLayout android:id="@+id/thumbnail_container" android:layout_width="72dp" android:layout_height="72dp">
                <ImageView android:id="@+id/hovercard_thumbnail" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:contentDescription="@null"/>
                <com.google.android.libraries.youtube.common.ui.CircularImageView android:id="@+id/hovercard_thumbnail_circular" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:contentDescription="@null"/>
            </FrameLayout>
            <View android:layout_width="@dimen/endscreen_video_thumbnail_margin" android:layout_height="match_parent"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textColor="?attr/ytTextPrimary" android:ellipsize="end" android:id="@+id/hovercard_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" app:robotoFont="6"/>
                <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="?attr/ytTextSecondary" android:ellipsize="end" android:id="@+id/hovercard_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:robotoFont="0"/>
            </LinearLayout>
        </LinearLayout>
        <View android:layout_gravity="bottom" android:background="?attr/ytSeparator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="@dimen/endscreen_hovercard_button_bar_height"/>
        <LinearLayout android:gravity="end" android:layout_gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/endscreen_hovercard_button_bar_height">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="?attr/ytThemedBlue" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/hovercard_cancel_button" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@android:string/cancel" app:robotoFont="6" style="?android:attr/borderlessButtonStyle"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="?attr/ytThemedBlue" android:gravity="center" android:layout_gravity="center" android:id="@+id/hovercard_watch_button" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:robotoFont="6" style="?android:attr/borderlessButtonStyle"/>
            <FrameLayout android:layout_gravity="center" android:id="@+id/hovercard_subscribe_container" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
