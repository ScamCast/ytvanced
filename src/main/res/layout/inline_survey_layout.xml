<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/survey_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="56dp">
        <ImageView android:id="@+id/close_button" android:background="?attr/selectableItemBackgroundBorderless" android:padding="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/close_button" android:tint="?attr/ytIconInactive" android:layout_alignParentTop="true" android:contentDescription="@string/accessibility_dismiss" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/icon" android:visibility="gone" android:layout_width="@dimen/medium_icon_24dp" android:layout_height="@dimen/medium_icon_24dp" android:layout_marginTop="@dimen/start_end_padding" android:tint="?attr/ytIconInactive" android:layout_alignParentTop="true" android:contentDescription="@null" android:layout_marginStart="@dimen/large_start_end_padding" android:layout_alignParentStart="true"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceSubhead" android:textColor="?attr/ytTextPrimary" android:id="@+id/title" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/start_end_padding" android:layout_marginBottom="@dimen/inline_survey_title_vertical_margin" android:layout_alignWithParentIfMissing="true" android:textIsSelectable="false" android:textAlignment="viewStart" android:layout_marginStart="@dimen/start_end_padding" android:layout_marginEnd="@dimen/slight_start_end_padding" android:layout_toStartOf="@+id/close_button" android:layout_toEndOf="@+id/icon" app:robotoFont="6"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="14sp" android:textColor="?attr/ytTextSecondary" android:id="@+id/subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/start_end_padding" android:layout_below="@+id/title" android:lineSpacingExtra="@dimen/inline_survey_subtitle_line_spacing_extra" android:layout_marginEnd="@dimen/inline_survey_title_end_margin" android:layout_alignStart="@+id/title" app:robotoFont="0"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/video_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/subtitle" android:layout_marginEnd="@dimen/start_end_padding" android:layout_alignParentStart="@+id/icon"/>
        <TextView android:textSize="12sp" android:textColor="?attr/ytCallToAction" android:id="@+id/tap_suppressed_message" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/inline_survey_follow_up_question_margin" android:text="@string/inline_surveys_inline_content_tap_suppressed_message" android:layout_below="@+id/video_layout" android:layout_alignStart="@+id/title"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/survey_responses" android:paddingTop="@dimen/slight_start_end_padding" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tap_suppressed_message"/>
        <View android:id="@+id/bottom_divider" android:background="?attr/yt10PercentLayer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/line_separator_height" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/full_size_video_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/video_divider" android:background="?attr/yt10PercentLayer" android:layout_width="match_parent" android:layout_height="@dimen/line_separator_height"/>
    </LinearLayout>
</LinearLayout>
