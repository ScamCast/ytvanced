<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/bbb_create_account_heading" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" style="@style/GDI.Dialog.BbbTitle"/>
        <TextView android:id="@+id/bbb_create_account_subtitle" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/GDI.Dialog.BbbSubtitle"/>
        <TextView android:id="@+id/bbb_fine_print" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" style="@style/GDI.Dialog.BbbFinePrint"/>
        <Button android:id="@+id/bbb_create_account_button" android:tag="ve=37017;track:click" android:layout_width="match_parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" style="@style/GDI.Dialog.BigBlueButton"/>
        <View android:layout_gravity="center_vertical" android:id="@+id/bbb_create_account_divider" android:background="@color/gdi_credentials_background" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/gdi_dialog_margin" android:layout_marginTop="16dp" android:layout_marginRight="@dimen/gdi_dialog_margin"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/bbb_create_dialog_buttons_holder" style="@style/GDI.Dialog.BbbButtonHolder">
            <Button android:id="@+id/bbb_already_have_account_button" android:tag="ve=37017;track:click" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/GDI.Dialog.BbbDialogButton"/>
            <Button android:id="@+id/bbb_create_cancel_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gdi_cancel" style="@style/GDI.Dialog.BbbDialogButton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
