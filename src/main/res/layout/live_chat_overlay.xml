<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/live_chat_overlay_frame" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.google.android.libraries.youtube.livechat.ui.view.LiveChatRecyclerView android:id="@+id/conversation_list" android:paddingBottom="@dimen/live_chat_overlay_message_container_margin" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null" android:dividerHeight="0dp" android:importantForAccessibility="no" android:layout_marginStart="@dimen/live_chat_overlay_message_container_margin" android:layout_marginEnd="@dimen/live_chat_overlay_message_container_margin"/>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/live_chat_overlay_ticker_top_margin" android:layout_alignParentTop="true">
            <android.support.v7.widget.RecyclerView android:id="@+id/ticker" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/more_comments_icon_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_alignParentBottom="true" android:translationY="@dimen/live_chat_more_comments_button_horizontal_offset" android:layout_marginStart="@dimen/live_chat_overlay_more_comments_icon_start_margin">
            <ImageButton android:id="@+id/more_comments_icon" android:background="@drawable/live_chat_more_comments_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/quantum_ic_arrow_downward_white_24" android:contentDescription="@string/live_chat_more_comments_cd" android:importantForAccessibility="no"/>
        </FrameLayout>
    </RelativeLayout>
    <include android:layout_gravity="bottom" android:id="@+id/live_chat_action_panel" android:visibility="gone" android:layout_width="@dimen/live_chat_overlay_action_panel_collapsed_width" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/live_chat_overlay_action_panel_container_margin_bottom" android:layout_marginStart="@dimen/live_chat_overlay_action_panel_container_margin_horizontal" android:layout_marginEnd="@dimen/live_chat_overlay_action_panel_container_margin_horizontal" layout="@layout/live_chat_overlay_action_panel"/>
    <ViewStub android:id="@+id/emoji_picker_stub" android:inflatedId="@+id/emoji_picker" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
