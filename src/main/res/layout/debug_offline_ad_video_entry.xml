<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:background="#cccccc" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:layout_width="150dp" android:layout_height="wrap_content" android:text="Original Video Title:"/>
        <TextView android:textSize="16sp" android:id="@+id/video_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Hello world!"/>
    </LinearLayout>
    <ListView android:textSize="16sp" android:id="@+id/ad_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="16sp" android:id="@+id/empty_ad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Not monetizable"/>
</LinearLayout>
