<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:padding="40dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/thumb_image_view" android:layout_width="260dp" android:layout_height="141dp" android:contentDescription="@null"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceTitle" android:textColor="@color/text_color_primary_default_light" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="70dp"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceSubhead" android:textColor="@color/text_color_secondary_default_light" android:textColorLink="@color/text_link_color" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:lineSpacingExtra="4sp" app:hyperlinksClickable="true"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceCaption" android:textColor="@color/text_color_tertiary_default_light" android:textColorLink="@color/text_link_color" android:id="@+id/footer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:lineSpacingExtra="4sp" app:hyperlinksClickable="true"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:background="@color/color_brand_primary" android:layout_width="match_parent" android:layout_height="56dp">
        <com.google.android.libraries.youtube.common.ui.YouTubeButton android:id="@+id/dismiss" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:robotoFont="6" style="@style/FamilyButton"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeButton android:id="@+id/action" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:robotoFont="6" style="@style/FamilyButton"/>
    </LinearLayout>
</LinearLayout>
