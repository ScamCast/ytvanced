        </LinearLayout>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceBody1" android:textColor="?attr/ytTextSecondary" android:ellipsize="end" android:id="@+id/playlist_tvshow_metadata" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4sp" android:maxLines="1" android:textAlignment="viewStart" android:layout_marginStart="@dimen/playlist_start_padding" android:layout_marginEnd="@dimen/playlist_end_padding"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceBody1" android:textColor="?attr/ytTextSecondary" android:id="@+id/playlist_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8sp" android:lineSpacingMultiplier="1.2" android:textAlignment="viewStart" android:layout_marginStart="@dimen/playlist_start_padding" android:layout_marginEnd="@dimen/playlist_end_padding" app:hyperlinksClickable="true"/>
