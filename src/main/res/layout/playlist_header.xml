    <LinearLayout android:layout_gravity="fill" android:orientation="vertical" android:id="@+id/playlist_metadata" android:paddingBottom="@dimen/playlist_header_bottom_padding" android:layout_column="0" android:layout_row="1" android:layout_rowSpan="2" android:layout_columnSpan="6">
        <LinearLayout android:orientation="horizontal" android:id="@+id/playlist_data" android:background="?attr/selectableItemBackground" android:paddingTop="@dimen/playlist_header_top_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4sp" android:paddingStart="@dimen/playlist_start_padding" android:paddingEnd="@dimen/playlist_end_padding">
