            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:gravity="center" android:layout_gravity="center" android:id="@+id/primary_button_label" android:background="?attr/selectableItemBackground" android:focusable="false" android:layout_width="wrap_content" android:layout_height="36dp" android:maxLines="1" android:drawablePadding="@dimen/text_button_icon_padding" app:robotoFont="6"/>
        </FrameLayout>
        <include android:id="@+id/actions_bar" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginTop="4sp" android:layout_marginStart="@dimen/playlist_header_action_bar_start_padding" layout="@layout/playlist_action_bar"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:gravity="center" android:id="@+id/action_button" android:background="?attr/selectableItemBackground" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="12dp" android:minHeight="36dp" android:maxLines="1" android:textAlignment="center" android:layout_marginStart="@dimen/playlist_start_padding" android:layout_marginEnd="@dimen/playlist_end_padding" app:robotoFont="6"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceBody2" android:textColor="?attr/colorPrimaryAlternate" android:id="@+id/offline_sync_button" android:background="?android:attr/selectableItemBackground" android:padding="@dimen/playlist_header_offline_sync_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" android:textAlignment="viewStart" android:layout_marginStart="@dimen/playlist_header_offline_sync_start_padding"/>
    </LinearLayout>
    <Space android:layout_height="32dp" android:layout_column="0" android:layout_row="2"/>
    <com.google.android.libraries.quantum.fab.FloatingActionButton android:layout_gravity="fill_vertical" android:id="@+id/playlist_fab" android:visibility="gone" android:layout_width="28dp" android:layout_height="28dp" android:layout_column="5" android:layout_row="2" android:layout_rowSpan="2" android:layout_marginEnd="@dimen/playlist_end_padding" app:quantumFabColor="@color/color_brand_primary"/>
    <FrameLayout android:layout_gravity="fill" android:id="@+id/footer" android:layout_marginTop="4dp" android:layout_column="0" android:layout_row="3" android:layout_rowSpan="2" android:layout_columnSpan="6" android:layout_marginStart="@dimen/playlist_start_padding" android:layout_marginEnd="@dimen/playlist_end_padding">
        <Space android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:layout_width="0dp" android:layout_height="26sp"/>
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/sub_header_row" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceBody2" android:textColor="?attr/ytTextSecondary" android:ellipsize="end" android:id="@+id/playlist_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8sp" android:layout_marginBottom="8sp" android:maxLines="1" android:layout_marginEnd="8sp"/>
            <View android:id="@+id/divider" android:background="@drawable/playlist_header_dot_divider" android:visibility="gone" android:layout_width="2sp" android:layout_height="2sp" android:layout_marginEnd="8sp"/>
            <FrameLayout android:id="@+id/sort_playlist_container" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
</GridLayout>
