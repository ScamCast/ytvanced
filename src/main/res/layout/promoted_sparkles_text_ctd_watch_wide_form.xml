                    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="14sp" android:textColor="?attr/adText2" android:ellipsize="end" android:id="@+id/app_store_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:maxWidth="80dp" android:layout_column="4" android:maxLines="1" android:layout_row="2" android:layout_marginEnd="2dp" app:robotoFont="0"/>
