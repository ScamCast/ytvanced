                    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="?attr/adText1" android:ellipsize="end" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_column="0" android:maxLines="1" android:layout_row="0" android:layout_columnSpan="5" app:robotoFont="0"/>
