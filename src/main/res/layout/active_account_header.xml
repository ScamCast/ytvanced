            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:ellipsize="end" android:id="@+id/email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="16dp" app:robotoFont="0"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeButton android:textSize="@dimen/medium_font_size" android:textColor="?attr/ytCallToAction" android:ellipsize="end" android:id="@+id/manage_account" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:singleLine="true" android:paddingStart="16dp" app:robotoFont="0"/>
        </LinearLayout>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceCaptionInverse" android:textColor="?attr/ytTextPrimary" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/status_text" android:background="?attr/ytGeneralBackgroundC" android:layout_width="match_parent" android:layout_height="36dp" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/account_name_container" android:textAllCaps="true" android:textAlignment="viewStart" android:paddingStart="16dp" android:paddingEnd="16dp" app:robotoFont="6"/>
    </RelativeLayout>
    <View android:layout_gravity="fill_horizontal" android:id="@+id/separator" android:background="?attr/ytSeparator" android:layout_width="match_parent" android:layout_height="1dp" android:layout_column="0" android:layout_row="2"/>
</GridLayout>
