<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:layout_width="210dp" android:layout_height="wrap_content" android:text="Ad state:"/>
        <TextView android:textSize="16sp" android:id="@+id/ad_state" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:layout_width="210dp" android:layout_height="wrap_content" android:text="Ad video id:"/>
        <TextView android:textSize="16sp" android:id="@+id/ad_video_id" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:layout_width="210dp" android:layout_height="wrap_content" android:text="Ad expires at:"/>
        <TextView android:textSize="16sp" android:id="@+id/ad_expires" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:layout_width="210dp" android:layout_height="wrap_content" android:text="Remaining asset playbacks:"/>
        <TextView android:textSize="16sp" android:id="@+id/ad_remaining_playbacks" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
