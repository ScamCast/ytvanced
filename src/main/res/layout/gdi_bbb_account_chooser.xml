<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/bbb_credential_chooser_heading" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" style="@style/GDI.Dialog.BbbTitle"/>
        <TextView android:id="@+id/bbb_credential_chooser_subtitle" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" style="@style/GDI.Dialog.BbbSubtitle"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/bbb_credential_chooser_credential_holder" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/gdi_dialog_margin" android:layout_marginRight="@dimen/gdi_dialog_margin" android:layout_marginBottom="20dp"/>
        <Button android:id="@+id/bbb_link_accounts_button" android:layout_width="match_parent" android:layout_marginTop="8dp" android:layout_marginBottom="20dp" android:text="@string/gdi_link_accounts" style="@style/GDI.Dialog.BigBlueButton"/>
    </LinearLayout>
</ScrollView>
