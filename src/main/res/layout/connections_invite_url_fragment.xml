<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/tristate_contents" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/invite_url_banner" android:layout_width="match_parent" android:layout_height="@dimen/connections_invite_url_banner_height" android:src="@drawable/connections_invite_illustration" android:scaleType="centerCrop" android:contentDescription="@string/accessibility_connections_illustration"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceTitle" android:gravity="start" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceSubhead" android:gravity="start" android:id="@+id/help" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:lineSpacingMultiplier="1.25" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <FrameLayout android:background="?attr/shareDashBorderDrawable" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <com.google.android.libraries.youtube.conversation.ui.InviteUrlView android:textAppearance="?attr/textAppearanceBody1" android:ellipsize="end" android:gravity="start" android:id="@+id/url" android:background="?attr/selectableItemBackground" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        </FrameLayout>
        <com.google.android.libraries.material.dialog.ButtonPaneLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceButton" android:textColor="?attr/colorPrimaryAlternate" android:ellipsize="end" android:id="@+id/cancel_button" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceButton" android:textColor="?attr/colorPrimaryAlternate" android:ellipsize="end" android:id="@+id/share_button" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp"/>
        </com.google.android.libraries.material.dialog.ButtonPaneLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/tristate_error" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textColor="?android:attr/textColorSecondary" android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="16dp" android:text="@string/error_message" android:layout_weight="1" app:robotoFont="0"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textColor="?attr/colorPrimaryAlternate" android:gravity="center_horizontal" android:id="@+id/retry_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="56dp" android:text="@string/yt_lib_common_retry" android:textAllCaps="true" app:robotoFont="0"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/tristate_loading" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/ConnectionLargeProgressBar"/>
    </RelativeLayout>
</FrameLayout>
