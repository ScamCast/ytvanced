    </LinearLayout>
    <ImageView android:id="@+id/selection_checkmark" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_check_blue" android:contentDescription="@null"/>
</LinearLayout>
