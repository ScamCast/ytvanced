<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent" android:foreground="?attr/selectableItemBackground">
    <FrameLayout android:id="@+id/avatar_container" android:background="@drawable/watchcard_avatar_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <com.google.android.libraries.youtube.common.ui.CircularImageView android:id="@+id/avatar" android:layout_width="58dp" android:layout_height="58dp" android:src="@drawable/missing_avatar" android:scaleType="centerCrop"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceButton" android:gravity="center" android:id="@+id/avatar_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" android:layout_marginStart="12dp"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceButton" android:gravity="center" android:id="@+id/action_button" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="36dp" android:includeFontPadding="false" android:drawablePadding="4dp" android:textAllCaps="true"/>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceSubhead" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false"/>
        <ViewStub android:id="@+id/title_badge" android:layout="@layout/watch_card_metadata_badge" android:inflatedId="@+id/title_badge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="3dp"/>
    </LinearLayout>
    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceCaption" android:textSize="@dimen/extra_small_font_size" android:ellipsize="end" android:id="@+id/subtitle" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/badge_layout" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceButton" android:ellipsize="end" android:id="@+id/subscribe_button" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/subscribe" android:maxLines="1" android:drawablePadding="8dp" android:drawableStart="@drawable/subscribed_mark"/>
        <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/subscription_notification_button"/>
    </LinearLayout>
</LinearLayout>
