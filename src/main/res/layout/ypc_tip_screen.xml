<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
    <RelativeLayout android:id="@+id/tip_area" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/channel_banner" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" android:minHeight="60dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <com.google.android.libraries.youtube.common.ui.CircularImageView android:id="@+id/tip_icon" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginTop="-24dp" android:src="@android:color/transparent" android:layout_below="@+id/channel_banner" android:layout_centerHorizontal="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
        <com.google.android.libraries.youtube.common.ui.CircularImageView android:id="@+id/viewer_thumbnail" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="-32dp" android:src="@android:color/transparent" android:layout_below="@+id/channel_banner" android:layout_toStartOf="@+id/tip_icon"/>
        <com.google.android.libraries.youtube.common.ui.CircularImageView android:id="@+id/channel_thumbnail" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="-32dp" android:src="@android:color/transparent" android:layout_below="@+id/channel_banner" android:layout_toEndOf="@+id/tip_icon"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/large_font_size" android:textColor="#333333" android:ellipsize="end" android:gravity="center" android:id="@+id/header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="2" android:includeFontPadding="false" android:layout_below="@+id/viewer_thumbnail" android:layout_centerHorizontal="true" app:robotoFont="0"/>
        <ImageView android:id="@+id/decrement" android:focusable="true" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/quantum_ic_remove_circle_outline_black_36" android:layout_alignBottom="@+id/amount" android:contentDescription="@string/accessibility_decrement_amount" android:alpha="0.54" android:layout_marginEnd="20dp" android:layout_toStartOf="@+id/amount"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="30sp" android:textColor="#666666" android:ellipsize="end" android:gravity="center" android:id="@+id/amount" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:minWidth="100dp" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/header" android:layout_centerHorizontal="true" app:robotoFont="0"/>
        <View android:id="@+id/amount_underline" android:background="@android:color/black" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_below="@+id/amount" android:layout_alignLeft="@+id/amount" android:layout_alignRight="@+id/amount" android:layout_alignStart="@+id/amount" android:layout_alignEnd="@+id/amount"/>
        <EditText android:textSize="30sp" android:textColor="#666666" android:ellipsize="end" android:gravity="center" android:id="@+id/amount_input" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:minWidth="100dp" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/header" android:layout_centerHorizontal="true" android:inputType="numberDecimal" android:imeOptions="actionDone"/>
        <ImageView android:id="@+id/increment" android:focusable="true" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/quantum_ic_add_circle_outline_black_36" android:layout_alignBottom="@+id/amount" android:contentDescription="@string/accessibility_increment_amount" android:alpha="0.54" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/amount"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="@android:color/black" android:ellipsize="end" android:gravity="center" android:id="@+id/additional_info" android:paddingLeft="20dp" android:paddingTop="15dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="3" android:includeFontPadding="false" android:layout_below="@+id/amount" android:layout_centerHorizontal="true" android:alpha="0.54" app:robotoFont="1"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/comment_area" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tip_area" android:layout_centerHorizontal="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <EditText android:textSize="@dimen/small_font_size" android:layout_gravity="center" android:id="@+id/comment_input" android:layout_width="match_parent" android:layout_height="0dp" android:includeFontPadding="false" android:layout_weight="1" android:inputType="textMultiLine" android:imeOptions="actionDone"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="#666666" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/comment_privacy_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:maxLines="2" android:includeFontPadding="false" app:robotoFont="1"/>
    </LinearLayout>
</LinearLayout>
