<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/promoted_app_install" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/content_layout" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp">
        <ImageView android:id="@+id/thumbnail" android:background="@drawable/bg_video_thumb" android:layout_width="40dp" android:layout_height="40dp" android:layout_alignParentTop="true" android:contentDescription="@null" android:layout_marginEnd="10dp" android:layout_alignParentStart="true"/>
        <include android:id="@+id/contextual_menu_anchor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_alignParentTop="true" android:layout_marginStart="8dp" android:layout_alignParentEnd="true" layout="@layout/contextual_menu_anchor"/>
        <include android:id="@+id/ad_attribution" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_alignTop="@+id/thumbnail" android:layout_marginEnd="6dp" android:layout_toEndOf="@+id/thumbnail" layout="@layout/standalone_ad_badge_small"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textColor="#000000" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:maxLines="1" android:lines="1" android:layout_alignTop="@+id/thumbnail" android:layout_toEndOf="@+id/ad_attribution" app:robotoFont="0"/>
        <RatingBar android:layout_gravity="center_vertical" android:id="@+id/rating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxHeight="12dp" android:progressDrawable="@drawable/app_promotion_ratingbar" android:minHeight="12dp" android:numStars="5" android:stepSize="0.1" android:isIndicator="true" android:layout_below="@+id/title" android:layout_marginEnd="5dp" android:layout_toEndOf="@+id/thumbnail"/>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="#999999" android:ellipsize="end" android:id="@+id/byline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/title" android:layout_toEndOf="@+id/rating" app:robotoFont="0"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_below="@+id/thumbnail" android:layout_alignParentStart="true" android:layout_alignParentEnd="true">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="#999999" android:ellipsize="end" android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:layout_weight="1" app:robotoFont="0"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/small_font_size" android:textColor="#999999" android:id="@+id/action" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:layout_weight="0" app:robotoFont="0"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/click_overlay" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
