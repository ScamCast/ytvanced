<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/enable_debug_ad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Enable debug ads"/>
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="6dp" app:cardBackgroundColor="@android:color/white" app:cardCornerRadius="2dp" app:cardElevation="2dp" app:cardUseCompatPadding="true">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?attr/textAppearanceTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Instream Ads" android:layout_marginStart="5dp"/>
                <CheckBox android:id="@+id/disable_freq_cap" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Disable Frequency Capping"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/list_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:dividerHeight="2dp"/>
                <Button android:id="@+id/add_ad_break" android:background="@android:color/white" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginBottom="10dp" android:text="+ ADD BREAK"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="6dp" app:cardBackgroundColor="@android:color/white" app:cardCornerRadius="2dp" app:cardElevation="2dp" app:cardUseCompatPadding="true">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?attr/textAppearanceTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="InDisplay Ads" android:layout_marginStart="5dp"/>
                <TextView android:textSize="15sp" android:textColor="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="6dp" android:text="Homepage Ads (Browse Request)"/>
                <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <Spinner android:textSize="16sp" android:id="@+id/homepage_spinner" android:layout_width="220dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                    <EditText android:textSize="16sp" android:id="@+id/homepage_entry" android:focusable="false" android:layout_width="100dp" android:layout_height="wrap_content" android:hint=""/>
                </LinearLayout>
                <TextView android:textSize="15sp" android:textColor="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="6dp" android:text="Search Ads (Search Request)"/>
                <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <Spinner android:textSize="16sp" android:id="@+id/search_spinner" android:layout_width="220dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                    <EditText android:textSize="16sp" android:id="@+id/search_entry" android:focusable="false" android:layout_width="100dp" android:layout_height="wrap_content" android:hint=""/>
                </LinearLayout>
                <TextView android:textSize="15sp" android:textColor="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="6dp" android:text="Watch Ads (WatchNext Request)"/>
                <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <Spinner android:textSize="16sp" android:id="@+id/watch_spinner" android:layout_width="220dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                    <EditText android:textSize="16sp" android:id="@+id/watch_entry" android:focusable="false" android:layout_width="100dp" android:layout_height="wrap_content" android:hint=""/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView android:textAppearance="?attr/textAppearanceTitle" android:textSize="18sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Usage notes" android:layout_marginStart="5dp"/>
        <TextView android:textAppearance="?attr/textAppearanceBody1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="• Must access from debug IP or be signed into a @google.com account. GoogleGuest WiFi will NOT work.\10\10• Must restart app after &apos;Enable debug ads&apos; is enabled" android:layout_marginStart="5dp"/>
    </LinearLayout>
</ScrollView>
