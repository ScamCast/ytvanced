<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:windowSoftInputMode="adjustPan">
    <CheckBox android:id="@+id/enable_debug_force_capability" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="Enable forcing of InnerTube Capabilities" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <TextView android:id="@+id/capabilities_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Capabilities:" android:layout_below="@+id/enable_debug_force_capability" android:textIsSelectable="false" android:layout_alignParentStart="true"/>
    <Button android:textSize="10sp" android:id="@+id/add_capability" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="0dp" android:minHeight="30dp" android:text="Add Capability" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <Button android:textSize="10sp" android:id="@+id/clear_capability" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="0dp" android:minHeight="30dp" android:text="Clear Capability" android:layout_alignParentBottom="true" android:layout_toEndOf="@+id/add_capability"/>
    <ScrollView android:id="@+id/capability_list_scroll_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="4dp" android:layout_above="@+id/add_capability" android:layout_below="@+id/capabilities_label" android:layout_alignParentStart="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/capability_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </ScrollView>
    <TextView android:id="@+id/description_how_to_enable" android:paddingTop="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Currently, this menu doesn&apos;t parse protos correctly.\10Please enable above and see OverrideInnertubeCapabilitiesUtil.java:138." android:layout_below="@+id/capabilities_label" android:textIsSelectable="false" android:layout_alignParentStart="true"/>
</RelativeLayout>
