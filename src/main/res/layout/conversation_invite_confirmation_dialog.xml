<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@android:color/transparent" android:dividerHeight="20dp">
    <ImageView android:id="@+id/invite_confirmation_banner" android:layout_width="match_parent" android:layout_height="@dimen/conversation_invite_url_banner_height" android:src="@drawable/invite_confirmation_banner" android:scaleType="centerCrop" android:contentDescription="@string/accessibility_connections_illustration"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/conversation_invite_contents" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceTitle" android:id="@+id/title_text" android:paddingBottom="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:background="@drawable/conversation_dialog_user_area_background" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.libraries.youtube.common.ui.CircularImageView android:id="@+id/user_thumbnail" android:layout_width="40dp" android:layout_height="40dp"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceSubhead" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/public_user_name" android:paddingLeft="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceBody1" android:textColor="?attr/ytTextSecondary" android:id="@+id/confirmation_details" android:paddingTop="8dp" android:paddingBottom="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textStyle="bold" android:textColor="?attr/ytStaticBlue" android:gravity="center" android:id="@+id/cancel_button" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="48dp" android:textAllCaps="true" app:robotoFont="0"/>
            <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@dimen/medium_font_size" android:textStyle="bold" android:textColor="?attr/ytStaticBlue" android:gravity="center" android:id="@+id/confirmation_button" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:minWidth="48dp" android:textAllCaps="true" android:layout_marginStart="16dp" app:robotoFont="0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
