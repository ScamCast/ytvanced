    </LinearLayout>
    <android.support.v7.widget.RecyclerView android:id="@+id/connections_list" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:overScrollMode="never"/>
    <View android:id="@+id/bottom_divider" android:background="?attr/ytSeparator" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
