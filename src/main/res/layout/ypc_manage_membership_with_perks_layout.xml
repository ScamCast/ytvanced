            </FrameLayout>
            <View android:layout_gravity="bottom" android:background="@drawable/drop_shadow" android:layout_width="match_parent" android:layout_height="@dimen/membership_drop_shadow_height"/>
        </FrameLayout>
        <FrameLayout android:background="?attr/ytGeneralBackgroundA" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0" android:paddingStart="16dp" android:paddingEnd="16dp">
            <com.google.android.libraries.youtube.common.ui.LoadingFrameLayout android:id="@+id/confirm_button_container" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceButton" android:textColor="?attr/ytCallToAction" android:ellipsize="end" android:layout_gravity="end" android:id="@+id/confirm_button" android:background="?attr/selectableItemBackground" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false"/>
